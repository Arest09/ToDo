<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style/reset.css">
  <link rel="stylesheet" href="/style/style.css">
  <script src="https://kit.fontawesome.com/998abb46f7.js" crossorigin="anonymous"></script>
  <title>To do list</title>
</head>

<body>
  <main>
    <a href="/"><i class="fa-solid fa-house" style="font-size:35px; position: absolute; top: 25%; left: 10%; transform: translateX(-50%);"></i></a>
    <div class="main__wrapper">
 
    
        

    <div  class="content">
        <% if (posts.length == 0) { %>
         <p style="text-align: center; font-size: large; color: aliceblue;">В избранном ничего нет</p>
        <% } %>
      <% posts.forEach(item => { %>
      <div class="content__item">
        <input type="text" class="input content__input" readonly value="<%= item.name %>">
        <% const checked = item.checked %>

        <div class="burger__content">
          <span class="content__line"></span>
          <span class="content__line"></span>
        </div>
      </div>
    <% }) %>
   
  </div> 
  </div>
  </main>
  <script src="/main.js"></script>
  
</body>

</html>


